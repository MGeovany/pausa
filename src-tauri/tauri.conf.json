{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "pausa",
  "version": "0.1.0",
  "identifier": "com.fndrs.pausa",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Pausa",
        "width": 0,
        "height": 0,
        "visible": false,
        "resizable": false,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "globalShortcut": {
      "shortcuts": {
        "cmd+space": "toggle_command_palette",
        "cmd+shift+f": "toggle_focus_session",
        "cmd+shift+l": "lock_now"
      }
    },
    "windowState": {
      "enabled": true
    },
    "notification": {
      "enabled": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
