{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "pausa",
  "version": "0.1.0",
  "identifier": "com.fndrs.pausa",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "command-palette",
        "title": "Pausa Command Palette",
        "width": 600,
        "height": 400,
        "visible": false,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "center": true,
        "shadow": false,
        "focus": true
      },
      {
        "label": "focus-widget",
        "title": "Pausa Focus Widget",
        "width": 280,
        "height": 80,
        "visible": false,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "shadow": false,
        "dragDropEnabled": true
      },
      {
        "label": "break-overlay",
        "title": "Pausa Break",
        "visible": false,
        "resizable": false,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "fullscreen": true,
        "shadow": false,
        "focus": true
      },
      {
        "label": "settings",
        "title": "Pausa Settings",
        "width": 800,
        "height": 600,
        "visible": false,
        "resizable": true,
        "decorations": true,
        "center": true,
        "skipTaskbar": false,
        "shadow": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "globalShortcut": {
      "shortcuts": {
        "cmd+space": "toggle_command_palette",
        "cmd+shift+f": "toggle_focus_session",
        "cmd+shift+l": "lock_now"
      }
    },
    "windowState": {
      "enabled": true
    },
    "positioner": {
      "enabled": true
    },
    "shell": {
      "open": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png"]
  }
}
